<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="12dp"
        android:paddingBottom="2dp"
        android:layout_gravity="center">
        <TextView
            android:id="@+id/tv_compare_route_order"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_gravity="center"
            android:text="1"
            android:textSize="12sp"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:background="@drawable/round_border_fill"/>
        <TextView
            android:id="@+id/tv_compare_route_wait_for_drive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textColor="@color/grey_AAAAAA"
            android:text="@string/header_beginning"/>
    </LinearLayout>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        app:cardElevation="0.8dp">
        <LinearLayout
            android:id="@+id/ll_compare_route_detail_root"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="6dp"
            android:paddingBottom="8dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:selectableItemBackground">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="8dp">
                <TextView
                    android:id="@+id/tv_compare_route_line_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="0dp"
                    android:paddingEnd="8dp"
                    android:paddingLeft="0dp"
                    android:paddingRight="8dp"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:text="ABCDE"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/tv_compare_route_begin_date_mmdd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:textAlignment="textEnd"
                    android:textSize="13sp"
                    android:textColor="@color/grey_B3555555"
                    android:text="03-07"/>
                <TextView
                    android:visibility="gone"
                    android:id="@+id/tv_compare_route_begin_time_hhmm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:textAlignment="textEnd"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:text="00:00"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="2dp"
                android:layout_marginBottom="6dp">
                <TextView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="8dp"
                    android:layout_gravity="center"
                    android:text="@string/one_char_beginning"
                    android:textSize="12sp"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:background="@drawable/round_border_fill1"/>
                <TextView
                    android:id="@+id/tv_compare_route_begin_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:textColor="#4682b4"
                    android:text="00:00"/>
                <TextView
                    android:id="@+id/tv_compare_route_begin_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:text="Beginning"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp">
                <TextView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="8dp"
                    android:layout_gravity="center"
                    android:text="@string/one_char_terminal"
                    android:textSize="12sp"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:background="@drawable/round_border_fill2"/>
                <TextView
                    android:id="@+id/tv_compare_route_terminal_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColor="#4682b4"
                    android:text="23:99"/>
                <TextView
                    android:id="@+id/tv_compare_route_day_plus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#FF6A37"
                    android:text="+1d"/>
                <TextView
                    android:id="@+id/tv_compare_route_terminal_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:text="Terminal"/>
            </LinearLayout>
            <com.ruffian.library.RTextView
                android:id="@+id/tv_compare_route_time_usage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:text="29d,23h,59m"
                android:gravity="center"
                android:drawablePadding="6dp"
                app:icon_src_normal="@drawable/ic_time_dark"
                app:icon_direction="left"/>
            <com.ruffian.library.RTextView
                android:id="@+id/tv_compare_route_cross_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:text="20"
                android:gravity="center"
                android:drawablePadding="6dp"
                app:icon_src_normal="@drawable/ic_sitemap"
                app:icon_direction="left"/>
            <com.ruffian.library.RTextView
                android:id="@+id/tv_compare_route_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FF6A37"
                android:textSize="22sp"
                android:text="000"
                android:gravity="center"
                android:drawablePadding="6dp"
                app:icon_src_normal="@drawable/ic_payment"
                app:icon_direction="left"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>