<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="10dp">
        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="#f1f1f1"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:id="@+id/tv_detail_big_route_wait_for_drive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textColor="@color/grey_AAAAAA"
            android:text="@string/header_beginning"/>
    </FrameLayout>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        app:cardElevation="0.8dp">
        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/ll_detail_big_route_detail_root"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="12dp"
            android:paddingBottom="8dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:selectableItemBackground"
            app:flexWrap="wrap"
            app:flexDirection="row"
            app:justifyContent="space_between">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">
                <TextView
                    android:id="@+id/tv_detail_big_route_order"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:layout_gravity="center"
                    android:text="1"
                    android:textSize="12sp"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:background="@drawable/round_border_fill"/>
                <TextView
                    android:id="@+id/tv_detail_big_route_begin_date_mmdd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:paddingStart="2dp"
                    android:paddingEnd="8dp"
                    android:paddingLeft="2dp"
                    android:paddingRight="8dp"
                    android:textAlignment="textEnd"
                    android:textSize="13sp"
                    android:textColor="@color/grey_B3555555"
                    android:text="03-07"/>
                <TextView
                    android:id="@+id/tv_detail_big_route_begin_time_hhmm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:textAlignment="textEnd"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:text="00:00"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="start">
                    <TextView
                        android:id="@+id/tv_detail_big_route_begin_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textColor="#4682b4"
                        android:textSize="18sp"
                        android:text="00:00"/>
                    <TextView
                        android:id="@+id/tv_detail_big_route_begin_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Beginning"/>
                </LinearLayout>

                <View
                    android:layout_width="16dp"
                    android:layout_height="2dp"
                    android:background="@drawable/line_dash"
                    android:layerType="software"/>
                <com.ruffian.library.RTextView
                    android:id="@+id/tv_detail_big_route_line_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:paddingStart="7dp"
                    android:paddingEnd="7dp"
                    android:text="ABCDE"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:minWidth="60dp"
                    app:border_color_normal="@color/grey_B3BDBDBD"
                    app:layout_alignSelf="center"
                    app:border_width_normal="1dp"
                    app:border_dash_gap="3dp"
                    app:border_dash_width="4dp"
                    app:corner_radius="20dp"/>
                <View
                    android:layout_width="16dp"
                    android:layout_height="2dp"
                    android:background="@drawable/line_dash"
                    android:layerType="software"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:orientation="vertical"
                    android:gravity="end">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_detail_big_route_terminal_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:textColor="#4682b4"
                            android:textSize="18sp"
                            android:text="23:99"/>
                        <TextView
                            android:id="@+id/tv_detail_big_route_day_plus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|end"
                            android:textSize="12sp"
                            android:textColor="#FF6A37"
                            android:text="+1d"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/tv_detail_big_route_terminal_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="Terminal"/>
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="12dp"
                app:layout_wrapBefore="true"/>

            <com.ruffian.library.RTextView
                app:layout_wrapBefore="true"
                android:id="@+id/tv_detail_big_route_time_usage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:text="29d,23h,59m"
                android:gravity="center"
                android:drawablePadding="6dp"
                app:icon_src_normal="@drawable/ic_time_dark"
                app:icon_direction="left"
                app:icon_height="20dp"
                app:icon_width="20dp"/>

            <com.ruffian.library.RTextView
                android:id="@+id/tv_detail_big_route_cross_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:text="20"
                android:gravity="center"
                android:drawablePadding="6dp"
                app:icon_src_normal="@drawable/ic_sitemap"
                app:icon_direction="left"
                app:icon_height="20dp"
                app:icon_width="20dp"/>
            <com.ruffian.library.RTextView
                android:id="@+id/tv_detail_big_route_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:textColor="#FF6A37"
                android:textSize="22sp"
                android:text="000"
                android:drawablePadding="6dp"
                app:layout_alignSelf="center"
                app:icon_src_normal="@drawable/ic_payment"
                app:icon_direction="left"
                app:icon_height="20dp"
                app:icon_width="20dp"/>

        </com.google.android.flexbox.FlexboxLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>