<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".views.activities.solution.SolutionsMasterActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_solutions"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:fitsSystemWindows="true"
        android:theme="@style/ActionBarWhiteIconTheme">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_title_solutions"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_weight="1"
                android:text="Solutions"
                android:textColor="@color/white"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/tv_btn_comparison"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:gravity="center"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:text="@string/label_manual_comparison"
                android:textColor="@color/white"
                android:checked="true"/>
        </LinearLayout>
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary">
        <TextView
            android:id="@+id/tv_query_prev_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="14dp"
            android:textAlignment="center"
            android:textColor="@drawable/selector_tv_primary"
            android:text="@string/tv_label_previous_day"/>
        <TextView
            android:id="@+id/tv_query_change_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="10dp"
            android:paddingBottom="14dp"
            android:textAlignment="center"
            android:textColor="@color/textColorPrimary"
            android:text="03/22 today"/>
        <TextView
            android:id="@+id/tv_query_next_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="14dp"
            android:textAlignment="center"
            android:textColor="@drawable/selector_tv_primary"
            android:text="@string/tv_label_next_day" />
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/srl_refresh_slns"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#F1F1F1">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_data"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="vertical"/>
                <include android:id="@+id/view_empty_slns"
                    layout="@layout/template_empty_view"
                    android:visibility="gone"/>
            </FrameLayout>
        </android.support.v4.widget.SwipeRefreshLayout>
        <LinearLayout
            android:id="@+id/layout_bottom_slns"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#454545"
            android:orientation="horizontal"
            android:clickable="true"
            android:focusable="true"
            android:layout_gravity="bottom">
            <FrameLayout
                android:id="@+id/vg_sort_duration_pay"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="10dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:orientation="horizontal">
                    <CheckedTextView
                        android:id="@+id/ctv_sort_duration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@drawable/selector_ctv_blue_white"
                        android:maxLines="1"
                        android:text="@string/label_sort_duration"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:maxLines="1"
                        android:text="@string/common_split"/>
                    <CheckedTextView
                        android:id="@+id/ctv_sort_pay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@drawable/selector_ctv_blue_white"
                        android:maxLines="1"
                        android:text="@string/label_sort_pay"/>
                </LinearLayout>
            </FrameLayout>
            <View
                android:layout_width="1dp"
                android:layout_height="12dp"
                android:layout_gravity="center"
                android:background="@color/white"/>
            <FrameLayout
                android:id="@+id/vg_sort_drive_arrive"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="10dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:orientation="horizontal">
                    <CheckedTextView
                        android:id="@+id/ctv_sort_drive"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@drawable/selector_ctv_blue_white"
                        android:maxLines="1"
                        android:text="@string/label_sort_drive"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:maxLines="1"
                        android:text="@string/common_split"/>
                    <CheckedTextView
                        android:id="@+id/ctv_sort_arrive"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@drawable/selector_ctv_blue_white"
                        android:maxLines="1"
                        android:text="@string/label_sort_arrive"/>
                </LinearLayout>
            </FrameLayout>
            <View
                android:layout_width="1dp"
                android:layout_height="12dp"
                android:layout_gravity="center"
                android:background="@color/white"/>
            <TextView
                android:id="@+id/tv_bottom_more"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:maxLines="1"
                android:text="@string/tv_label_more"/>
        </LinearLayout>
        <include android:id="@+id/pane_on_error"
            android:visibility="gone"
            layout="@layout/template_pane_on_error" />
    </FrameLayout>
</LinearLayout>
